#include<stdio.h>
int main()
{
int largest,n,i;
printf("enter the size of an array:");
scanf("%d",&n);
int array[n];
printf("enter %d elements of an array:",n);
for(i=0;i<n;i++)
{
scanf("%d",&array[i]);
}
largest=array[0];
for(i=1;i<n;i++)
{
if(largest<array[i])
largest=array[i];
}
printf("largest element present in an array is : %d", largest);
return 0;
}
