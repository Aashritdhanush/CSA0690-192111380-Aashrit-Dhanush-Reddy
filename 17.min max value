#include<stdio.h>
int main()
{
int i,a[30],min,max,n;
printf("enter the no of elements:");
scanf("%d",&n);
printf("enter %d elements:");
for(i=0;i<n;i++)
{
scanf("%d",&a[i]);
}
min=a[0];
max=a[0];
for(i=1;i<n;i++)
{
if(a[i]<min)
{
min=a[i];
}
if(a[i]>max)
{
max=a[i];
}
}
printf("minimum element=%d\n",min);
printf("maximum element=%d",max);
return 0;
}
